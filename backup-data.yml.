name: Backup data.json every 5 minutes

on:
  schedule:
    - cron: '*/5 * * * *'  # هر ۵ دقیقه
  workflow_dispatch:       # می‌تونی دستی هم اجرا کنی

jobs:
  backup:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GH_TOKEN }}

      - name: Download data.json from Railway
        run: |
          curl -f -o data.json "https://backup-production-xxxx.up.railway.app/download" || echo "skip"

      - name: Commit and push if changed
        run: |
          git config user.name "Auto Backup Bot"
          git config user.email "bot@github.com"
          git add data.json pending.json || echo "No changes"
          git diff --quiet && git diff --staged --quiet || git commit -m "Auto backup $(date)"
          git push origin main || echo "Nothing to push"
